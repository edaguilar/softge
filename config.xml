<?xml version="1.0" encoding="UTF-8" ?>
<widget 
 xmlns   = "http://www.w3.org/ns/widgets"        
 xmlns:gap   = "http://phonegap.com/ns/1.0"       
  id          = "com.infommodity.app"        
  versionCode = "1"         
  version     = "0.0.96">        
	<name>InfommodityDemo</name>        
	<description>            
	InfommodityDemo
	</description>        
	<author email="eaguilar@softelligence.com.mx" href="http://www.softelligence.com.mx">            
	Softelligence       
	</author>        
	<content src="index.html" />        
	<access origin="*" />        
	<preference name="Fullscreen" value="true" />        
	<preference name="WebViewBounce" value="true" /> 
	<preference name="orientation" value="landscape"/>
	<gap:platform name="ios" />
	<gap:platform name="android" />
	<gap:config-file platform="ios" parent="UISupportedInterfaceOrientations" overwrite="true">
		<array>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
		</array>	
	</gap:config-file>
</widget>

